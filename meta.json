{
  "$schema": "https://dl.viam.dev/module.schema.json",
  "module_id": "hipsterbrown:pan-tilt-camera",
  "visibility": "public",
  "url": "https://github.com/HipsterBrown/viam-pan-tilt-camera",
  "description": "Modular base component: base-control",
  "models": [
    {
      "api": "rdk:component:base",
      "model": "hipsterbrown:pan-tilt-camera:base-control",
      "short_description": "control a pair of servos like a pan-tilt camera base",
      "markdown_link": "readme.md#model-hipsterbrownpan-tilt-camerabase-control"
    },
    {
      "api": "rdk:service:generic",
      "model": "hipsterbrown:pan-tilt-camera:tracker",
      "short_description": "Automatically track a configured detected object using a vision service",
      "markdown_link": "readme.md#model-hipsterbrownpan-tilt-cameratracker"
    }
  ],
  "entrypoint": "dist/main",
  "first_run": "",
  "build": {
    "build": "./build.sh",
    "setup": "./setup.sh",
    "path": "dist/archive.tar.gz",
    "arch": [
      "linux/amd64",
      "linux/arm64"
    ]
  }
}
